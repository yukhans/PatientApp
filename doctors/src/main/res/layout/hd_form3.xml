<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ScrollView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="30dp"
            android:background="@drawable/bg_hd_form"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Q3. Have you been hospitalized for covid-19 or pneumonia for the past month?"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <CheckBox
                        android:id="@+id/q3_yes"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <CheckBox
                        android:id="@+id/q3_no"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/ifyestext"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If YES: Have you completed the 14 days quarantine?"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ifyesgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <CheckBox
                        android:id="@+id/completed_yes"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textAllCaps="true"
                        android:textSize="16sp"/>

                    <CheckBox
                        android:id="@+id/complete_no"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textAllCaps="true"
                        android:textSize="16sp"/>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/doyoutext"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Do you have subsequent NEGATIVE RT-PCR result?"
                    android:textColor="@color/black"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/doyougroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <CheckBox
                        android:id="@+id/negative_yes"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textAllCaps="true"
                        android:textSize="16sp"/>

                    <CheckBox
                        android:id="@+id/negative_no"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textAllCaps="true"
                        android:textSize="16sp"/>

                </LinearLayout>



                <Button
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:id="@+id/nextBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:minHeight="48dp"
                    android:text="next"
                    android:background="@color/white"
                    android:textColor="#F36767" />




            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</ScrollView>